<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.flyway_mybatis.mapper.ItemMapper">

    <resultMap id="itemResults" type="com.example.flyway_mybatis.domain.Item">
        <result column="order_item_id" property="order_item_id"/>
        <result column="orders_id" property="orders_id"/>
        <result column="item_name" property="item_name"/>
        <result column="price" property="price"/>
        <result column="quantity" property="quantity"/>
    </resultMap>

    <insert id="addItem">
        INSERT INTO order_item (order_item_id, orders_id, item_name, price, quantity)
        VALUES (#{order_item_id}, #{orders_id}, #{item_name}, #{price}, #{quantity})
    </insert>

</mapper>